# ResumeSpy Backend - Environment Variables Template
# Copy this file to .env and fill in your values
# NEVER commit .env to source control

# Database Connection
DATABASE_CONNECTION_STRING=Host=localhost;Port=5432;Database=resumespy_dev;Username=postgres;Password=yourpassword;

# JWT Configuration
JWT_ISSUER=ResumeSpy
JWT_AUDIENCE=ResumeSpyFrontend
JWT_SIGNING_KEY=your-32-character-or-longer-secure-signing-key-here
JWT_ACCESS_TOKEN_DURATION_MINUTES=60
JWT_REFRESH_TOKEN_DURATION_DAYS=14

# Google OAuth (optional)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# GitHub OAuth (optional)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# CORS Allowed Origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Logging Level (Debug, Information, Warning, Error)
LOG_LEVEL=Debug

# Environment Name (for telemetry/monitoring)
ENVIRONMENT_NAME=Local
